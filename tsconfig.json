{
    "compilerOptions": {
        "baseUrl": "./",
        "outDir": "./dist/",
        "sourceMap": true,
        "noImplicitAny": false,
        "module": "commonjs",
        "target": "es2017",
        "jsx": "react",
        "moduleResolution": "node",
        "typeRoots" : ["node_modules/@types"],
        "esModuleInterop": true,
        "skipLibCheck": true,
        "paths": {
            "components/*": ["./src/components/*"],
            "models/*": ["./src/models/*"],
            "pages/*": ["./src/pages/*"],
            "modules/*": ["./src/modules/*"],
            "hooks/*": ["./src/hooks/*"]
        }
    }
}
